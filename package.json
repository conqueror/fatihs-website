{
	"name": "sveltekit-demo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "node scripts/generate-content.js && vite dev",
		"build": "node scripts/generate-content.js && (node scripts/generate-sitemap.js || true) && (node scripts/optimize-images.js || true) && vite build || echo 'Build failed, see error above'",
		"optimize-images": "node scripts/optimize-images.js",
		"preview": "vite preview",
		"preview-spa": "node preview-server.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"autoprefixer": "^10.4.14",
		"hast-util-to-html": "^9.0.5",
		"postcss": "^8.4.24",
		"shiki": "^3.1.0",
		"svelte": "^4.0.5",
		"tailwindcss": "^3.3.3",
		"unist-util-visit": "^5.0.0",
		"vite": "^4.4.2",
		"glob": "^10.3.3",
		"sharp": "^0.32.5"
	},
	"type": "module",
	"dependencies": {
		"dompurify": "^3.2.4",
		"gray-matter": "^4.0.3",
		"isomorphic-dompurify": "^2.22.0",
		"jsdom": "^26.0.0",
		"marked": "^15.0.7",
		"md5": "^2.3.0",
		"mdsvex": "^0.12.3",
		"rehype-pretty-code": "^0.12.3"
	}
}
